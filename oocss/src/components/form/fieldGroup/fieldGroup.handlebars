    {{#flabel "" "fieldLabel"}}Select your options{{/flabel}}
    {{#fgroup}}
      {{#repeat 2 "selectInputblock"}}
        {{#fgroupitem "fselect" @indexStr "" "" "" "" "" 2}}Option {{@index}}{{/fgroupitem}}
      {{/repeat}}
    {{/fgroup}}
  {{/ffield}}
{{/formpres}}

